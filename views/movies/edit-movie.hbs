<h2>Edit your Movie</h2>

<form action="/movies/{{movie._id}}/edit" method="POST">

    <label for="title">Title:</label>
    <input type="text" name="title" value="{{movie.title}}">

    <br>

    <label for="genre">genre:</label>
    <input type="text" name="genre" value="{{movie.genre}}">

    <br>
    <label for="plot">plot:</label>
    <input type="text" name="plot" value="{{movie.plot}}">

    <br>

    <label for="cast">cast</label>

        <select name="cast" id="" multiple="true">
        {{#each celebrity}}

        <option value="{{this._id}}">{{this.name}}</option>

        {{/each}}
        </select>

    <br>

    <button>Edit</button>

    <form action="/movies/{{movie._id}}/delete" method="post">
    <button>Delete</button>
    </form>